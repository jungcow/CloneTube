extends layout/main

block content
  .form-container
    form(action=`/user${routes.editProfile}`, method="post", enctype="multipart/form-data")
      input(type="file", id="avatar", name="avatar", accept="image/*")
      input(type="text", placeholder="이름", name="name", value=user.name)
      input(type="email", placeholder="이메일", name="email", value=user.email)
      input(type="submit", value="수정하기")
    a(href=`/user${routes.changePassword}`)
      button 비밀번호 변경