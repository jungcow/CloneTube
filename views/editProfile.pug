extends layout/main

block content
  .form-container
    form(action=`/user${routes.editProfile}`, method="post", enctype="multipart/form-data")
      .fileUpload
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
      input(type="text", placeholder="Name", name="name", value=user.name)
      input(type="email", placeholder="Email", name="email", value=user.email)
      input(type="submit", value="Update Profile")
    a(href=`/user${routes.changePassword}`)
      button Change Password